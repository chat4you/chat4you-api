html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/stylesheets/login.css")
        title= title
    body
        div(class="login")
            h1 Login
            input(type="text", id="username", class="login-item login-input", placeholder="Username")
            input(type="password", id="password", class="login-item login-input", placeholder="Password")
            button(class="submit login-item") Login
            script(src="/javascripts/login.js")